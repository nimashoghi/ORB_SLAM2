{
    "name": "C++",
    "image": "nimashoghi/ubuntu-xenial-orb-slam2-runtime-deps:latest",
    "runArgs": [
        // privileged
        "--privileged",
        // host networking
        "--network",
        "host",
        // volume
        "-v",
        "/var/run/docker.sock:/var/run/docker.sock"
    ],
    "extensions": ["ms-vscode.cpptools"]
}
